<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuye.mapper.OwnerMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.wuye.entity.Owner">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="id_card" property="idCard"/>
        <result column="email" property="email"/>
        <result column="house_id" property="houseId"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 分页查询业主列表 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT * FROM tb_owner
        ORDER BY create_time DESC
            LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询业主总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*) FROM tb_owner
    </select>

    <!-- 根据ID查询业主 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM tb_owner WHERE id = #{id}
    </select>

    <!-- 根据条件搜索业主 -->
    <select id="search" resultMap="BaseResultMap">
        SELECT * FROM tb_owner
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <if test="idCard != null and idCard != ''">
                AND id_card LIKE CONCAT('%', #{idCard}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 新增业主 -->
    <insert id="insert" parameterType="com.wuye.entity.Owner" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_owner (name, gender, phone, id_card, email, house_id, remark, create_time, update_time)
        VALUES (#{name}, #{gender}, #{phone}, #{idCard}, #{email}, #{houseId}, #{remark}, NOW(), NOW())
    </insert>

    <!-- 更新业主 -->
    <update id="update" parameterType="com.wuye.entity.Owner">
        UPDATE tb_owner
        SET name = #{name},
            gender = #{gender},
            phone = #{phone},
            id_card = #{idCard},
            email = #{email},
            house_id = #{houseId},
            remark = #{remark},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除业主 -->
    <delete id="deleteById">
        DELETE FROM tb_owner WHERE id = #{id}
    </delete>

</mapper>
