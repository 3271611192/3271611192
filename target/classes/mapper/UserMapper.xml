<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuye.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.wuye.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="real_name" property="realName"/>
        <result column="phone" property="phone"/>
        <result column="role" property="role"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据用户名查询用户 -->
    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM tb_user WHERE username = #{username}
    </select>

    <!-- 分页查询用户列表 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT * FROM tb_user
        ORDER BY create_time DESC
            LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询用户总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*) FROM tb_user
    </select>

    <!-- 根据ID查询用户 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM tb_user WHERE id = #{id}
    </select>

    <!-- 根据条件搜索用户 -->
    <select id="search" resultMap="BaseResultMap">
        SELECT * FROM tb_user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="realName != null and realName != ''">
                AND real_name LIKE CONCAT('%', #{realName}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 新增用户 -->
    <insert id="insert" parameterType="com.wuye.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_user (username, password, real_name, phone, role, status, create_time, update_time)
        VALUES (#{username}, #{password}, #{realName}, #{phone}, #{role}, #{status}, NOW(), NOW())
    </insert>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.wuye.entity.User">
        UPDATE tb_user
        SET username = #{username},
            password = #{password},
            real_name = #{realName},
            phone = #{phone},
            role = #{role},
            status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteById">
        DELETE FROM tb_user WHERE id = #{id}
    </delete>

</mapper>
