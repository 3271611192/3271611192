<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuye.mapper.PaymentMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.wuye.entity.Payment">
        <id column="id" property="id"/>
        <result column="owner_id" property="ownerId"/>
        <result column="house_id" property="houseId"/>
        <result column="payment_type" property="paymentType"/>
        <result column="amount" property="amount"/>
        <result column="status" property="status"/>
        <result column="payment_time" property="paymentTime"/>
        <result column="billing_month" property="billingMonth"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 分页查询缴费记录列表 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT * FROM tb_payment
        ORDER BY create_time DESC
            LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询缴费记录总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*) FROM tb_payment
    </select>

    <!-- 根据ID查询缴费记录 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM tb_payment WHERE id = #{id}
    </select>

    <!-- 根据条件搜索缴费记录 -->
    <select id="search" resultMap="BaseResultMap">
        SELECT * FROM tb_payment
        <where>
            <if test="ownerId != null">
                AND owner_id = #{ownerId}
            </if>
            <if test="houseId != null">
                AND house_id = #{houseId}
            </if>
            <if test="paymentType != null and paymentType != ''">
                AND payment_type = #{paymentType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 新增缴费记录 -->
    <insert id="insert" parameterType="com.wuye.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_payment (owner_id, house_id, payment_type, amount, status, payment_time, billing_month, remark, create_time, update_time)
        VALUES (#{ownerId}, #{houseId}, #{paymentType}, #{amount}, #{status}, #{paymentTime}, #{billingMonth}, #{remark}, NOW(), NOW())
    </insert>

    <!-- 更新缴费记录 -->
    <update id="update" parameterType="com.wuye.entity.Payment">
        UPDATE tb_payment
        SET owner_id = #{ownerId},
            house_id = #{houseId},
            payment_type = #{paymentType},
            amount = #{amount},
            status = #{status},
            payment_time = #{paymentTime},
            billing_month = #{billingMonth},
            remark = #{remark},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除缴费记录 -->
    <delete id="deleteById">
        DELETE FROM tb_payment WHERE id = #{id}
    </delete>

</mapper>
